{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
